<!DOCTYPE html>
<htmL>
  <head>
    <title>Bookmark Manager</title>
  </head>
  <body>
    <% if current_user %>
      Welcome <%= @current_user.email %>!
    <% else %>
      <form action='/users/new'>
        <input type='submit' value='Create an account'>
      </form>
    <% end %>
    <br><br>
    <% if flash[:notice] %>
      <div id='notice'><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</htmL>
